#ifndef __REALVIEW_CONFIG_H__
#define __REALVIEW_CONFIG_H__

#include <asm/arch/mcbd.h>

#define CLOCK_TICK_RATE			100

#define PHYS_OFFSET   		(0xC0000000UL)

#define IDLE_PG_TABLE_ADDR	(0xC0004000UL)
#define __PAGE_OFFSET           (0x3F000000UL)

#define MEMMAP_DRAM_ADDR	PHYS_OFFSET
#define MEMMAP_DRAM_SIZE	0x10000000 //256MB
#define MEMMAP_NOR_ADDR		0x40000000
#define MEMMAP_NOR_SIZE		0x02000000

#endif
